  volume   =  20,
  number   =  7,
  pages    = "e3001713",
  month    =  jul,
  year     =  2022,
  file     = "All Papers/B/Bai et al. 2022 -plos biol - Neural dynamics differentially encode phrases and sentences during spoken language comprehension.pdf",
  language = "en",
  issn     = "1544-9173, 1545-7885",
  pmid     = "35834569",
  doi      = "10.1371/journal.pbio.3001713",
  pmc      = "PMC9282610"
}

